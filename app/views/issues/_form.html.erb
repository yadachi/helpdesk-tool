    <%= f.label :summary %><br>
    <%= f.text_area :summary %>
  </div>
  <div class="field">
    <%= f.label :received_date %><br>
    <%= f.datetime_select :received_date %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br>
    <%= f.date_select :due_date %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :issue_type %><br>
    <%= f.text_field :issue_type %>
  </div>
  <div class="field">
    <%= f.label :assigned_to %><br>
    <%= f.collection_select :assigned_to, User.all, :id, :name, prompt: "Select User" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
