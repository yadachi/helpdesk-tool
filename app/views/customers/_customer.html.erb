<%= content_tag_for(:tr, customer, :class => cycle('odd', 'even')) do %> 
  <td><%= customer.title %></td>
  <td><%= customer.name %></td>
  <td><%= customer.direct_number %></td>
  <td><%= customer.email %></td>
  <td><%= customer.main_contact %></td>
  <td><%= link_to 'Show', company_customer_path(@company, customer) %></td>
  <td><%= link_to 'Edit', edit_company_customer_path(@company, customer) %></td>
  <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
