<%= content_tag_for(:tr, customer, :class => cycle('odd', 'even')) do %> 
  <td><%= customer.title %></td>
  <td><%= link_to customer.name, company_customer_path(@company, customer) %></td>
  <td><%= customer.direct_number %></td>
  <td><%= customer.email %></td>
  <td><%= customer.main_contact %></td>
  <td><%= link_to content_tag(:i, " Edit", class: "fa fa-edit"), edit_company_customer_path(@company, customer) %></td>
  <td><%= link_to content_tag(:i, " Delete", class: "fa fa-edit"), company_customer_path(@company, customer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
