<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>
        <%= @company.name %>
      </h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-building"></i> Companies &nbsp;<i class="fa fa-chevron-right"></i>&nbsp; <i class="fa fa-list-alt"></i> 
          <%= @company.name %>
        </li>
      </ol>
    </div><!-- /.col -->
  </div>
  <div class="row">
    <div class="col-lg-12">
      <% if notice %>
      <div class="alert alert-info alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>   
        <%= notice %></p>
      </div>
      <% end %>      
    </div>
  </div>
  <div class="row" style="margin-bottom: 10px;">
    <div class="col-lg-12">
      <div class="text-right">
        <%= link_to 'Edit', edit_company_path(@company), class: 'btn btn-default' %> &nbsp; <%= link_to 'Delete', @company, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <ul class="nav nav-tabs" role="tablist">
        <li class="active"><a href="#home" role="tab" data-toggle="tab">Detail</a></li>
        <li><a href="#profile" role="tab" data-toggle="tab">Location</a></li>
        <li><a href="#messages" role="tab" data-toggle="tab">User list</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="home">
          <div class="table-responsive">
            <table class="table ">
              <thead>
              </thead>
              <tbody>
                <tr>
                  <td>Main Phone:</td>
                  <td><%= @company.telephone %></td>
                </tr>
                <tr>
                  <td>Fax number:</td>
                  <td><%= @company.fax %></td>
                </tr>
                <tr>
                  <td>Deleted:</td>
                  <td><%= @company.is_deleted %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="tab-pane" id="profile"><%= render @location %></div>
        <div class="tab-pane" id="messages">
          <div class="table-responsive">
            <table class="table table-hover table-striped tablesorter", id="customers">
              <thead>
                <tr>
                  <th>Title <i class="fa fa-sort"></i></th>
                  <th>Name <i class="fa fa-sort"></i></th>
                  <th>Direct number <i class="fa fa-sort"></i></th>
                  <th>Email <i class="fa fa-sort"></i></th>
                  <th>Main contact <i class="fa fa-sort"></i></th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <%= render :partial => @company.customers %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
