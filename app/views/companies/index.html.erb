<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Company List</h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-building"></i> Companies</li>
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <button class="btn btn-default" data-toggle="modal" data-target="#companyModal">
        <i class="fa fa-plus-circle"></i> New Company
      </button>
    </div>
    <div class="col-lg-6">
      <div class="text-right">
        <%= form_tag companies_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-building"></i> Company List</h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-hover table-striped tablesorter">
              <thead>
                <tr>
                  <th>Name <i class="fa fa-sort"></i></th>
                  <th>main phone <i class="fa fa-sort"></i></th>
                  <th>fax number <i class="fa fa-sort"></i></th>
                  <th>Deleted <i class="fa fa-sort"></i></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @companies.each do |company| %>
                <tr>
                  <td><%= link_to company.name, company %></td>
                  <td><%= company.telephone %></td>
                  <td><%= company.fax %></td>
                  <td><%= company.is_deleted %></td>
                  <td><%= link_to content_tag(:i, " Edit", class: "fa fa-edit"), edit_company_path(company) %></td>
                  <td><%= link_to content_tag(:i, ' Destroy', class: "fa fa-times"), company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              </tbody>
            </table> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  <%= render 'form' %>



