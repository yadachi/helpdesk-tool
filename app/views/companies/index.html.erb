<h1>Company List</h1>

<%= form_tag companies_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
  </p>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>main phone</th>
      <th>fax number</th>
      <th>Deleted</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
        <td><%= link_to company.name, company %></td>
        <td><%= company.telephone %></td>
        <td><%= company.fax %></td>
        <td><%= company.is_deleted %></td>
        <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-default', role: 'button' %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', role: 'button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Company', new_company_path, class: 'btn btn-mini btn-primary', role: 'button' %>



