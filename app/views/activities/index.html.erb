<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>Issue</th>
      <th>Date time</th>
      <th>Activity type</th>
      <th>Activity note</th>
      <th>Hours</th>
      <th>Minutes</th>
      <th>Entered by</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.issue_id %></td>
        <td><%= activity.date_time %></td>
        <td><%= activity.activity_type %></td>
        <td><%= activity.activity_note %></td>
        <td><%= activity.hours %></td>
        <td><%= activity.minutes %></td>
        <td><%= activity.entered_by %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

